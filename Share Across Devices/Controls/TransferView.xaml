<UserControl
    x:Class="Share_Across_Devices.Controls.TransferView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Share_Across_Devices.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="420"
    d:DesignWidth="300">

    <RelativePanel Width="300" Margin="0,8,0,0">
        <local:MediaView x:Name="MediaViewer"
                             RelativePanel.AlignTopWithPanel="True"
                             RelativePanel.AlignLeftWithPanel="True"
                             RelativePanel.AlignRightWithPanel="True"/>
        <Button x:Name="CancelButton" 
                Content="&#xE711;" 
                FontFamily="Segoe MDL2 Assets"
                Margin="8"
                Padding="12"
                Foreground="White"
                FontWeight="Bold"
                FontSize="16"
                HorizontalAlignment="Center"
                Click="CancelButton_Click"
                BorderBrush="{x:Null}" 
                Background="Transparent"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"/>
        <StackPanel Orientation="Horizontal"
                        RelativePanel.Below="MediaViewer"
                        RelativePanel.AlignHorizontalCenterWithPanel="True">
            <Button x:Name="OpenFileButton" 
                        Content="open" 
                        Margin="8"
                        Padding="12"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        Click="OpenFileButton_Click" 
                        BorderBrush="{x:Null}" 
                        Background="#33FFFFFF"  />
            <Button x:Name="SaveFileButton" 
                        Content="save" 
                        Margin="8"
                        Padding="12"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        Click="SaveFileButton_Click" 
                        BorderBrush="{x:Null}" 
                        Background="#33FFFFFF"  />
        </StackPanel>
    </RelativePanel>
</UserControl>
